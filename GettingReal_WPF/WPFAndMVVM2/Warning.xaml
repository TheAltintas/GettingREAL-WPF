<Window x:Class="WPFAndMVVM2.Warning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAndMVVM2"
        mc:Ignorable="d"
        Title="Warning" Height="100" Width="270">
    <Grid>
        <Label Content="Are you sure you want to delete this item?" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="248" Height="26"/>
        <Button x:Name="confirmdelete" Content="Delete Item" HorizontalAlignment="Left" Margin="122,41,0,0" VerticalAlignment="Top" Click="confirmdelete_Click"/>
        <Button x:Name="cancel" Content="Cancel" HorizontalAlignment="Left" Margin="202,41,0,0" VerticalAlignment="Top" Click="cancel_Click"/>

    </Grid>
</Window>
